<h2>Register User</h2>

<%= form_with url: "/register", method: :post, local: :true do |form|%>
  <%= form.label :name%>
  <%= form.text_field :name, required: true %>

  <%= form.label :email%>
  <%= form.text_field :email, required: true, uniqueness: true%>
  <%= form.label :password %>
  <%= form.text_field :password, required: true, uniqueness: true%>
  <%= form.label :password_confirmation %>
  <%= form.text_field :password_confirmation, required: true, uniqueness: true%>

  <%= form.submit "Submit"%>
<%end%>